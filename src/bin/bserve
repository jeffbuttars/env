#!/bin/bash

BASE_DIR='~/Dev/BST/defense-os'
cd $BASE_DIR
WORK_DIR="$BASE_DIR"

shellexec ()
{
    tmpfile=$(mktemp)
    echo -e "set +e\ntrap 'echo \"Dead now!\"' SIGINT SIGTERM\n$1\nzsh -i" > "$tmpfile"
    konsole --profile red --workdir $WORK_DIR -e "zsh $tmpfile" &
    sleep 1
}

sudo systemctl start couchdb

i3-msg 'workspace " 10 ï„ˆ Dev Services"'

WORK_DIR="$BASE_DIR/services/api"
cd $WORK_DIR
shellexec "echo 'Reseting workspace $WORK_DIR and starting API dev server'; vcreset; . ./.vc_proj; vcin -d; ./serve --log-level debug --reload"

i3-msg 'split vertical'

WORK_DIR="$BASE_DIR/cop"
cd $WORK_DIR
shellexec "echo 'Starting COP...'; yarn yrebuild; yarn start"

i3-msg 'focus parent'
i3-msg 'split horizontal'

WORK_DIR="$BASE_DIR"
cd $WORK_DIR
shellexec "echo 'Starting V1 services...'; nvm use bst; nf start -j Procfile.jeff"

i3-msg 'split vertical'

WORK_DIR="$BASE_DIR/services/sims/simdar"
cd $WORK_DIR
konsole --profile red --workdir $WORK_DIR
