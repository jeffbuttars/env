#!/bin/bash

declare -a commands

run_cmds ()
{
    for (( i=0; i<${#commands[@]}; i++ ));
    do
        echo "Running '${commands[$i]}' " 1>&2
        ${commands[$i]}
    done
}

CLEAR='false'

if [[ $1 == '-c' ]]; then
    shift
    CLEAR='true'
fi

SLEEP_TIME=3

if [[ -z $@ ]]; then
    echo "no commands to run!!!!"
    exit 1
fi

commands=( "$@" )

# echo "Running commands '${commands[@]}' on modify"
run_cmds ${commands[@]}
sleep $SLEEP_TIME

echo "watching $PWD/*"

while inotifywait -e modify -r $PWD/*
do
    if [[ $CLEAR == 'true' ]]; then
        printf '\033c'
    fi

    sleep $SLEEP_TIME
    run_cmds ${commands[@]}
done
