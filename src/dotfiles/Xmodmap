!
! Remap the right Super/OS to control
clear Control
clear Mod4
keysym Super_R = Control_R
add Control = Control_L Control_R
add Mod4 = Super_L Super_R


! caps lock is escape
remove Lock = Caps_Lock
! keysym Escape = Caps_Lock
keysym Caps_Lock = Escape
add Lock = Caps_Lock


! make capslock a tab
!remove Lock = Caps_Lock
!keysym Caps_Lock = Tab

! keycode 0x42 = Tab
! Make the caps lock a tab
! clear Lock
!keysym Caps_Lock = Tab

