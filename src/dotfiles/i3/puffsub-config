
# Workspace layout
# Odds on left, evens on right
workspace 1 output DVI-I-2
workspace 3 output DVI-I-2
workspace 5 output DVI-I-2
workspace 7 output DVI-I-2
workspace 9 output DVI-I-2
workspace 2 output DVI-I-3
workspace 4 output DVI-I-3
workspace 6 output DVI-I-3
workspace 8 output DVI-I-3

bar {
        font xft:DejaVu Sans 12
        font xft:Eurostile Bold 10
        mode hide
        modifier Mod1
        status_command i3status
        position bottom
}

exec_always synergys

# Go to default spaces
bindsym $mod+Insert workspace 2, workspace 1
bindsym $mod+End workspace 4, workspace 1

# Setup default apps for workspaces
exec --no-startup-id i3-msg 'workspace 1; exec /usr/bin/konsole'
exec --no-startup-id i3-msg 'workspace 4; exec /usr/bin/google-chrome-stable'
exec --no-startup-id i3-msg 'workspace 5; exec /usr/bin/thunderbird'
