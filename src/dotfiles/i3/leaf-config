set $right_op HDMI1

# Workspace vars
# Doc window
set $ws1 " 1  "
# Slack
set $ws2 " 2  "
# Dev Services
set $ws3 " 3  "
set $ws4 " 4  "
# Main code window
set $ws5 " 5  "
# Mail
set $ws6 " 6  "
# Scratch
set $ws7 " 7 ? "
# Scratch
set $ws8 " 8 ? "
# Main web dev output windows
set $ws9 " 9  "
# Scratch
set $ws10 " 10  "
set $ws11 " 11 ? "
set $ws12 " 12 ? "

### monitor layout ###

# Focus by monitor
bindsym Control+1 focus output $left_op
bindsym Control+2 focus output $center_op
bindsym Control+3 focus output $right_op

